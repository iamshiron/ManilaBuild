{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "start": {
            "dependsOn": ["build"]
        },
        "clean": {
            "cache": false,
            "outputs": [".next/**", "build/**"]
        }
    }
}
