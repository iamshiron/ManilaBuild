{
    "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
    "metadata": [
        {
            "src": [
                {
                    "src": "../src",
                    "files": ["**/*.csproj"],
                    "exclude": ["**/bin/**", "**/obj/**"]
                }
            ],
            "output": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": ["**/*.{md,yml}"],
                "exclude": ["_site/**"],
                "src": "md"
            },
            {
                "files": ["**/*.yml"],
                "src": "api",
                "dest": "api"
            }
        ],
        "resource": [
            {
                "files": ["images/**"]
            }
        ],
        "xref": ["https://iamshiron.github.io/lib/xrefmap.yml"],
        "output": "_site",
        "template": ["default", "modern"],
        "globalMetadata": {
            "_appName": "manilabuild",
            "_appTitle": "manilabuild",
            "_enableSearch": true,
            "pdf": false
        }
    }
}
